<% if(locals.messages.length > 0) { %>
    <% messages.forEach(message => { %>
        <div class="message-card">
            <% if(locals.userSession) { %>
                <% if(userSession.role === 'Admin') {%>
                    <div class="svgs-close">
                        <svg style="width:24px;height:24px" viewBox="0 0 24 24">
                            <path fill="currentColor" d="M12,2C17.53,2 22,6.47 22,12C22,17.53 17.53,22 12,22C6.47,22 2,17.53 2,12C2,6.47 6.47,2 12,2M15.59,7L12,10.59L8.41,7L7,8.41L10.59,12L7,15.59L8.41,17L12,13.41L15.59,17L17,15.59L13.41,12L17,8.41L15.59,7Z" />
                        </svg>
                    </div>
                <% } %>
            <% } %>
            <h2 class="title-message"><%- message.title %></h2>
            <div class="content-message"><%- message.text %></div>
            <div class="author-n-date">
                <% if(locals.userSession) { %> 
                    <% if(userSession.role === 'User') { %>
                        Become a member to see this information
                    <% } else { %>
                        <div class="timestamp-message"><%- message.timestamp_formatted %></div>
                        <div class="author-message"><%- message.author.firstname %> <%- message.author.lastname %></div>
                    <% } %>
                <% } else {%>
                    Become a member to see this information
                <% } %>
            </div>
        </div>
    <%})%>
<%}%>