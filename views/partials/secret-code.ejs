<%
let usernameSecret1 = '' 
let firstnameSecret1 = '' 
let lastnameSecret1 = ''
let idSecret1 = '' 
let pwdSecret1 = ''
if(locals.userSession) {
    usernameSecret1 = userSession.username; 
    firstnameSecret1 = userSession.firstname;
    lastnameSecret1 = userSession.lastname;
    idSecret1 = userSession.id;
    pwdSecret1 = userSession.password;
} %>
<form action="/secret-code" method="POST" class="secret-code" id="secret-code-form">
    <svg class="close-secret" style="width:24px;height:24px" viewBox="0 0 24 24">
        <path color="gray" fill="currentColor" d="M12,2C17.53,2 22,6.47 22,12C22,17.53 17.53,22 12,22C6.47,22 2,17.53 2,12C2,6.47 6.47,2 12,2M15.59,7L12,10.59L8.41,7L7,8.41L10.59,12L7,15.59L8.41,17L12,13.41L15.59,17L17,15.59L13.41,12L17,8.41L15.59,7Z" />
    </svg>
    <div class="secret_code_form_div">
        <label for="secret-code"><h2>Secret Code</h2></label>
        <input type="text" id="secret-code" name="secretCode" required>
    </div>
    <input type="hidden" name="usernameSecret" value="<%- `${usernameSecret1}` %>">
    <input type="hidden" name="firstnameSecret" value="<%- `${firstnameSecret1}` %>">
    <input type="hidden" name="lastnameSecret" value="<%- `${lastnameSecret1 }` %>">
    <input type="hidden" name="idSecret" value="<%- `${idSecret1}` %>">
    <input type="hidden" name="pwdSecret" value="<%- `${pwdSecret1}` %>">
    <button class="secret-code-submit">Submit</button>
</form>